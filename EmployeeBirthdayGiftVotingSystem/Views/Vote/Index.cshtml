@model IEnumerable<EmployeeBirthdayGiftVotingSystem.Models.Vote.VoteIndexViewModel>;
@using EmployeeBirthdayGiftVotingSystem.Views.Shared.Components.VoteCard
@{
    ViewData["Title"] = "All votes for birthday gift";
}

<h1 class="text-center mb-4">All votes for birthday gifts</h1>

<section class="vote-list">
    @foreach (var voting in Model)
    {
        @await Component.InvokeAsync(typeof(VoteCardViewComponent), new { vote = voting })
    }
</section>